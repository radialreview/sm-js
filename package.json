{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "eslint src && tsc",
    "prepare": "husky install",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslint": {
    "extends": [
      "react-app",
      "prettier"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "name": "sm-js",
  "author": "Ricardo Marques",
  "module": "dist/sm-js.esm.js",
  "size-limit": [
    {
      "path": "dist/sm-js.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/sm-js.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@size-limit/preset-small-lib": "^6.0.4",
    "@testing-library/react": "^12.1.2",
    "@types/lodash": "^4.14.177",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^7.0.0",
    "husky": "^7.0.4",
    "isomorphic-fetch": "^3.0.0",
    "size-limit": "^6.0.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "4.6.2"
  },
  "dependencies": {
    "@apollo/client": "^3.4.17",
    "graphql": "^16.1.0",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "mobx": "^6.3.6",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "subscriptions-transport-ws": "^0.11.0"
  },
  "resolutions": {
    "**/typescript": "^4.6.2",
    "**/@typescript-eslint/eslint-plugin": "^5.16.0",
    "**/@typescript-eslint/parser": "^5.16.0",
    "**/@babel/core": "^7.12.3"
  }
}
